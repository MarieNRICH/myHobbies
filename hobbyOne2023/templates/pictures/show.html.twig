{% block title %}Pictures{% endblock %}

{% block body %}
    <h1>Pictures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ picture.name }}</td>
